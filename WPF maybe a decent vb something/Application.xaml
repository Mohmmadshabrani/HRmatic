    xmlns:local="clr-namespace:WPF_maybe_a_decent_vb_something"

    StartupUri="View\Admin\MainDashboard.xaml">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/Buttons.xaml"/>
                <ResourceDictionary Source="Themes/ColorPalette.xaml"/>
